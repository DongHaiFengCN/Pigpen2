<?xml version="1.0" encoding="utf-8"?>
<com.doaing.pigpen.other.SlideFinishActivityLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/dp_8"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="@dimen/dp_40"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables,UselessLeaf,UselessParent" >

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/cancel"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/sp_16"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/submit_im"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_8"
            android:text="@string/publish"
            style="@style/AppTheme.Button"
            tools:ignore="ContentDescription,RelativeOverlap" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDivision"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:singleLine="false"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:gravity="top"
            android:padding="@dimen/fab_margin"
            android:textSize="@dimen/sp_16"
            android:background="@color/colorPrimaryDark"
            tools:ignore="Autofill,LabelFor" />

        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/ic_add_image"
            android:layout_marginStart="@dimen/dp_8"
            tools:ignore="ContentDescription" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</com.doaing.pigpen.other.SlideFinishActivityLayout>